<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UpdateContactActivity">

    <EditText
        android:layout_marginTop="25dp"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:id="@+id/name_search_last"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Search"
        android:onClick="searchContactLast"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/title_text"
        android:text="Update Contact"
        android:textSize="18sp"
        android:textAppearance="@android:style/TextAppearance"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Name Here"
        android:id="@+id/new_name"
        android:layout_marginTop="30dp"
        android:ems="10"/>

    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Mobile Here"
        android:id="@+id/new_mobile"/>

    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Email Here"
        android:id="@+id/new_email"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/update_button_last"
        android:text="Update Contact"
        android:onClick="updateContactLast"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>

</LinearLayout>